<div class="card">
  <%= render "shared/menu"  %>
</div>

<% @apps.each do |app| %>
  <div class="card app">
    <div class="card-inner">
      <%= image_tag app.wide_banner, class: "wide-banner"  %>

      <div class="text-container">
        <%= image_tag app.icon, class: "app-icon" %>
        <h2><%= app.name %></h2>
        <p><%= dat_markdown(app.desc) %></p>
      </div>

      <%= store_badge app %>
    </div>
  </div>
<% end %>

