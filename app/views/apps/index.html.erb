<div class="card">
  <%= render "shared/menu"  %>
</div>

<% @apps.each do |app| %>
  <div class="card app">

    <% if app.coming_soon? %>
      <div class="coming-soon"><span>Coming Soon</span></div>
    <% end %>

    <div class="card-inner">
      <% if app.wide_banner  %>
        <%= image_tag app.wide_banner, class: "wide-banner"  %>
      <% else %>
        <%= image_tag app.mini_banner, class: "mini-banner" %>
      <% end %>

      <div class="text-container">
        <%= image_tag app.icon, class: "app-icon" %>
        <h2><%= app.name %></h2>
        <p><%= dat_markdown(app.desc) %></p>
      </div>

      <%= store_badge app %>
    </div>
  </div>
<% end %>

