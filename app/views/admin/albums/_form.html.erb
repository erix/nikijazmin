<%= form_for [:admin, @album], html: { class: "form-horizontal", multipart: true } do |f| %>
  <%= f.error_messages  %>
  <div class="control-group">
    <%= f.label :name, class: "control-label"  %>
    <div class="controls">
      <%= f.text_field :name, class: "input-xxlarge"  %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit class: "btn" %>
    </div>
  </div>
<% end %>

<% if not @album.new_record? %>
  <%= render :partial => "jq_upload", :locals => { :album  => @album }  %>
<% end %>
