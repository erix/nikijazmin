<%= form_for [@product, @review], html: { class: "form-horizontal"} do |f| %>
  <%= f.error_messages %>
  <div class="control-group">
    <%= f.label :quote, class: "control-label" %>
    <div class="controls">
      <%= f.text_area :quote, class: "input-xxlarge" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :link, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :link, class: "input-xxlarge" %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= image_tag @review.image(:thumb) unless @review.new_record?  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image, class: "control-label" %>
    <div class="controls">
      <%= f.file_field :image %><br/>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit class: "btn" %>
    </div>
  </div>
<% end %>
