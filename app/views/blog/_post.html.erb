<div class="card post">
  <div class="card-inner">
    <div class="text-container">
      <%= content_tag :span, l(post.updated_at.to_date, :format => :long), class: 'date'  %>
      <h2>
        <%= link_to post.title, blog_post_path(post) %>
      </h2>
      <%= dat_markdown post.text  %>
      <div class="share">
        <a href="https://twitter.com/share" class="twitter-share-button" data-url="<%= blog_post_url(post) %>" data-count="none" data-text="<%= post.title %>" data-via="NikiAndJazmin">Tweet</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
        <div class="fb-like" data-send="false" data-width="450" data-show-faces="false" href="<%= blog_post_url(post) %>"></div>
      </div>
    </div>
  </div>
</div>
