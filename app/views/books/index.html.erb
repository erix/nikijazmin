<div class="card">
  <%= render "shared/menu"  %>
</div>

<% @books.each do |book|  %>
  <div class="card book">

    <% if book.store_link.nil? %>
      <div class="coming-soon"><span>Coming Soon</span></div>
    <% end %>

    <div class="card-inner">
      <%= image_tag book.icon, :class => "product-icon"  %>
      <div class="text-container">
        <h2><%= book.name  %></h2>
        <p><%= dat_markdown(book.desc) %></p>
      </div>

      <%= store_badge book %>
    </div>

  </div>
<% end %>
